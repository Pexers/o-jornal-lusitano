<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext for WebView content but secure API calls -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.github.com</domain>
        <domain includeSubdomains="true">pexers.github.io</domain>
    </domain-config>
    
    <!-- Allow cleartext traffic for newspaper websites in WebView -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
