<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frameLayout_categoryJournal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_categoryJournal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/archivo_narrow"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/icon_padding"
        android:paddingEnd="0dp"
        android:text="Journal Name"
        android:textAllCaps="true"
        android:textSize="@dimen/item_text_size" />

    <ToggleButton
        android:id="@+id/toggle_categoryJournalStar"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/star_button"
        android:textOff=""
        android:textOn="" />

</FrameLayout>
