<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    tools:context=".fragments.RecentFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="35dp"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/textView_recent"
            android:background="@drawable/fade_in_line" />

        <View
            android:layout_width="35dp"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/textView_recent"
            android:background="@drawable/fade_out_line"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textView_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/averia_serif_libre_light"
            android:text="@string/item_recent"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imageButton_emptyRecent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/icon_padding"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_garbage" />

    </RelativeLayout>

</FrameLayout>