<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout_favouriteJournal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView_favouriteJournal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/archivo_narrow"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/icon_padding"
        android:paddingEnd="0dp"
        android:text="Journal Name"
        android:textAllCaps="true"
        android:textSize="@dimen/item_text_size" />

    <ImageButton
        android:id="@+id/imageButton_removeFavourite"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_cross"
        app:tint="@color/crimson" />

</FrameLayout>
