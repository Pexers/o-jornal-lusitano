<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    tools:context=".fragments.FavouritesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="35dp"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/textView_favourites"
            android:background="@drawable/fade_in_line" />

        <View
            android:layout_width="35dp"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/textView_favourites"
            android:background="@drawable/fade_out_line"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/textView_favourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/averia_serif_libre_light"
            android:text="@string/item_favourites"
            android:textSize="18sp" />

        <ToggleButton
            android:id="@+id/toggle_editFavourites"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/icon_padding"
            android:background="@drawable/edit_button"
            android:textOff=""
            android:textOn="" />

    </RelativeLayout>

</FrameLayout>